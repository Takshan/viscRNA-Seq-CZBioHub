

{
  "variables": {    
    "aws_access_key": "{{env `aws_access_key`}}",
    "aws_secret_key": "{{env `aws_secret_key`}}",
    "aws_security_group_id": "",
    "aws_region": "us-west-2",
    "aws_instance_type": "t2.micro",
    "aws_source_ami": "ami-1b62b863",
    "aws_virtualization_type": "pv",
    "travis_commit": "{{env `TRAVIS_COMMIT`}}",
    "viscrnaseq_packer_token": "{{env `VISCRNA-SEQ_PACKER_TOKEN`}}"

  },
  "builders": [
    
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      
      "security_group_id": "{{user `aws_security_group_id`}}",
      "region": "{{user `aws_region`}}",
      "associate_public_ip_address": "true",
      
      "source_ami": "{{user `aws_source_ami`}}",
      "instance_type": "{{user `aws_instance_type`}}",
      "ami_virtualization_type": "{{user `aws_virtualization_type`}}",
      
      "ssh_username": "ubuntu",
      "ami_name": "viscRNA-Seq {{user `travis_commit`}} [{{timestamp}}]",
      "ami_description": "viscRNA-Seq deployment built with Packer.io",

      "tags": {
        "Release": "{{user `travis_commit`}}",
        "Name": "viscRNA-Seq {{user `travis_commit`}} [{{timestamp}}]"
      },

      "run_tags": {
        "Name": "viscRNA-Seq launch instance {{user `travis_commit`}} [{{timestamp}}]",
	"viscrnaseq_packer_token": "{{user `viscrnaseq_packer_token`}}"
      },

      "run_volume_tags": {
        "Name": "viscRNA-Seq launch volume {{user `travis_commit`}} [{{timestamp}}]",
	"viscrnaseq_packer_token": "{{user `viscrnaseq_packer_token`}}"
      },

      "shutdown_behavior": "terminate",

      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 12,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "build/configure.sh",
      "inline_shebang": "/bin/bash -ex",
      "environment_vars": [
       "TRAVIS_COMMIT={{user `travis_commit`}}",
       "AWS_ACCESS_KEY_ID={{user `aws_access_key`}}",
       "AWS_SECRET_ACCESS_KEY={{user `aws_secret_key`}}"
      ]
    },
    {
      "type": "file",
      ???
    }
  ]

}
